
@model JobApp.Models.Employer

@{
	ViewData["Title"] = "Employer Profile";
}

<h1>Employer Profile</h1>

<div>
	<h4>@Model.CompanyName</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">Contact</dt>
		<dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>

		<dt class="col-sm-2">Email</dt>
		<dd class="col-sm-10">@Model.ContactEmail</dd>

		<dt class="col-sm-2">Address</dt>
		<dd class="col-sm-10">@Model.Address</dd>
	</dl>

	   <p>
		   <a asp-controller="JobPost" asp-action="Post">Job Post</a> |
		   <a asp-controller="Home" asp-action="Index">Home</a>
	   </p>
</div>
